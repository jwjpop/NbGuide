<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

    <Button
        android:id="@+id/button_map_1f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="엔비 1층 지도"
        android:textSize="20dp"
        />
        <Button
        android:id="@+id/button_map_2f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="엔비 2층 지도"
        android:textSize="20dp"
        />
        <Button
            android:id="@+id/button_menu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메뉴판1"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/button_menu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메뉴판2"
            android:textSize="20dp"/>
        <Button
        android:id="@+id/button_enterinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입장 정보"
        android:textSize="20dp"/>

        <!--하단바에 가리지 않게 하려는 장치 visibility 설정 완료-->
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@xml/color"
            app:itemTextColor="@xml/color"
            app:layout_behavior="tech.thdev.app.view.BottomNavigationBehavior"
            android:visibility="invisible"
            app:menu="@xml/menu" />
    </LinearLayout>
</ScrollView>


</FrameLayout>